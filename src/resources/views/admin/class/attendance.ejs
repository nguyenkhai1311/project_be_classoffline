<section class="content">
	<div class="container-fluid">
		<div class="card-header">
			<h3 class="card-title"><strong><%= classInfor.name %></strong></h3>
		</div>
		<form action=""
			method="POST">
			<div class="card-body"
				style="overflow-x: auto; width: 100%">
				<table class="table table-bordered"
					style="width: 100vw">
					<thead>
						<tr>
							<th style="width: 10px">#</th>
							<th style="width: 500px">Họ Tên</th>
							<% dateLearn.forEach((date) => { %>
							<th><%= moment(date).format("DD/MM/YYYY") %></th>
							<% }) %>
						</tr>
					</thead>
					<tbody>
						<% students.forEach((student, index) => { %>
						<tr>
							<td><%= index + 1 %></td>
							<td><%= student.User.name %> - <%= student.User.email %></td>
							<% dateLearn.forEach((date, index) => { %>
							<td>
								<select name="status">
									<option value="">--</option>
									<option value="<%= moment(date).format("YYYY/MM/DD") %> - <%= student.User.id %> - 0"
										<%= checkAttendance(attendanceList, date, student.User.id, 0) && "selected" %>>Nghỉ</option>
									<option value="<%= moment(date).format("YYYY/MM/DD") %> - <%= student.User.id %> - 1"
										<%= checkAttendance(attendanceList, date, student.User.id, 1) && "selected" %>>Đến muộn</option>
									<option value="<%= moment(date).format("YYYY/MM/DD") %> - <%= student.User.id %> - 2"
										<%= checkAttendance(attendanceList, date, student.User.id, 2) && "selected" %>>Đúng giờ</option>
								</select>
							</td>
							<% }) %>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
			<div class="card-header">
				<button class="btn btn-success">Lưu</button>
			</div>
		</form>
	</div>
</section>