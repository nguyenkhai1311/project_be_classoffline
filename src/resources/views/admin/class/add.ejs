<div class="card card-primary form-add-course">
	<form action="/admin/classes/add"
		method="post">
		<div class="card-body">
			<div class="form-group">
				<label for="">Tên lớp học:</label>
				<input type="text"
					class="form-control"
					name="className"
					placeholder="Nhập tên lớp học" />
				<span class="text-danger"><%= validate.getError(errors, "className")%></span>
			</div>
			<div class="form-group">
				<label for="">Sĩ số:</label>
				<input type="number"
					class="form-control"
					name="classQuantity"
					placeholder="Nhập sĩ số" />
				<span class="text-danger"><%= validate.getError(errors, "classQuantity")%></span>
			</div>
			<div class="form-group">
				<label for="">Ngày khai giảng:</label>
				<input type="date"
					class="form-control"
					name="classStartDate" />
				<span class="text-danger"><%= validate.getError(errors, "classStartDate")%></span>
			</div>
			<div class="form-group">
				<label for="">Lịch học:</label>
				<select data-placeholder="Chọn lịch học"
					multiple
					id="classSchedule"
					class="chosen-select form-control"
					name="classSchedule">
					<option value="1">Thứ 2</option>
					<option value="2">Thứ 3</option>
					<option value="3">Thứ 4</option>
					<option value="4">Thứ 5</option>
					<option value="5">Thứ 6</option>
					<option value="6">Thứ 7</option>
					<option value="0">Chủ nhật</option>
				</select>
				<span class="text-danger"><%= validate.getError(errors, "classSchedule")%></span>
			</div>
			<div class="wrap__time-schedule"></div>

			<div class="form-group">
				<label for="">Khóa học:</label>
				<select name="courseId"
					id=""
					class="form-control">
					<option value="">Chọn khóa học</option>
					<% courses.forEach((course) => {%>
					<option value="<%= course.id %>"><%= course.name %></option>
					<% }) %>
				</select>
				<span class="text-danger"><%= validate.getError(errors, "courseId")%></span>
			</div>
		</div>

		<div class="card-footer">
			<button type="submit"
				class="btn btn-primary">
				Thêm lớp học
			</button>
		</div>
	</form>
</div>

<script>
	$( ".chosen-select" ).chosen( {
		no_results_text: "Oops, nothing found!"
	} )
</script>