<div class="card card-primary">
  <form action="/admin/courses/add" method="post">
    <div class="card-body">
      <div class="form-group">
        <label for="">Tên lớp học:</label>
        <input type="text" class="form-control" name="className" placeholder="Nhập tên lớp học" />
      </div>
      <div class="form-group">
        <label for="">Sĩ số:</label>
        <input type="number" class="form-control" name="classQuantity" placeholder="Nhập sĩ số" />
      </div>
      <div class="form-group">
        <label for="">Ngày khai giảng:</label>
        <input type="date" class="form-control" name="classStartDate" />
      </div>
      <div class="form-group">
        <label for="">Lịch học:</label>
        <input type="number" class="form-control" name="tryLearn" placeholder="Nhập số buổi học thử" />
      </div>
      <div class="form-group">
        <label for="">Thời gian học:</label>
        <input type="number" class="form-control" name="courseQuantity" placeholder="Nhập sĩ số" />
      </div>
      <div class="form-group">
        <label for="">Giảng viên:</label>
        <input type="number" class="form-control" name="courseDuration" placeholder="Nhập số buổi học" />
      </div>
      <div class="form-group">
        <label for="">Khóa học:</label>
        <input type="number" class="form-control" name="courseDuration" placeholder="Nhập số buổi học" />
      </div>
    </div>

    <div class="card-footer">
      <button type="submit" class="btn btn-primary">
        Thêm lớp học
      </button>
    </div>
  </form>
</div>