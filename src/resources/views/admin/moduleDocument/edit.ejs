<div class="card card-primary">
  <form action="/admin/module-documents/edit/<%= moduleDocument.id %>" method="post">
    <div class="card-body">
      <div class="form-group">
        <label for="">Nội dung tài liệu:</label>
        <input type="text" class="form-control" name="documentContent" value="<%= moduleDocument.content %>" placeholder="Nhập tiêu đề tài liệu" />
      </div>
      <div class="form-group">
        <label for="">Đường dẫn tới tài liệu:</label>
        <input type="text" class="form-control" name="pathName" value="<%= moduleDocument.pathName %>" placeholder="Nhập đường dẫn tới tài liệu" />
      </div>
      <div class="form-group">
        <label for="">Tài liệu:</label>
        <select class="form-control" name="moduleId">
          <option value="">Chọn tài liệu</option>
          <% courseModule.forEach((moduleVal) => { %>
          <option value="<%= moduleVal.id %>" <%= moduleVal.id === moduleDocument.moduleId ? "selected" : "" %>><%= moduleVal.name %> - <%= moduleVal.Course.name %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="card-footer">
      <input type="hidden" name="_method" value="PATCH">
      <button type="submit" class="btn btn-primary">
        Sửa nội dung tài liệu
      </button>
    </div>
  </form>
</div>