<div class="card card-primary">
	<form action="/admin/teachers/add"
		method="post">
		<div class="card-body">
			<div class="form-group">
				<label for="nameUser">Tên giảng viên:</label>
				<input type="text"
					class="form-control"
					id="nameUser"
					name="name"
					placeholder="Nhập tên giảng viên" />
				<span class="text-danger"><%= validate.getError(errors, "name")%></span>
			</div>
			<div class="form-group">
				<label for="emailUser">Email:</label>
				<input type="email"
					class="form-control"
					id="emailUser"
					name="email"
					placeholder="Nhập email" />
				<span class="text-danger"><%= validate.getError(errors, "email")%></span>
			</div>
			<div class="form-group">
				<label for="phoneUser">Số điện thoại:</label>
				<input type="text"
					class="form-control"
					id="phoneUser"
					name="phone"
					placeholder="Nhập số điện thoại" />
				<span class="text-danger"><%= validate.getError(errors, "phone")%></span>
			</div>
			<div class="form-group">
				<label for="addressUser">Địa chỉ:</label>
				<input type="text"
					class="form-control"
					id="addressUser"
					name="address"
					placeholder="Nhập địa chỉ">
				<span class="text-danger"><%= validate.getError(errors, "address")%></span>
			</div>
			<div class="form-group">
				<label for="">Chức vụ:</label>
				<input type="radio"
					id="typeTeacher"
					name="typeName"
					value="Teacher">
				<label for="typeTeacher">Giảng viên</label>
				<input type="radio"
					id="typeTA"
					name="typeName"
					value="TA">
				<label for="typeTA">Trợ giảng</label>
				<p class="text-danger"><%= validate.getError(errors, "typeName")%></p>
			</div>
		</div>
		<!-- /.card-body -->

		<div class="card-footer">
			<button type="submit"
				class="btn btn-primary">
				Thêm giảng viên
			</button>
		</div>
	</form>
</div>