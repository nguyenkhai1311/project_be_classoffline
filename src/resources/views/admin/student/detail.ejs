<h4><strong>Thông tin cá nhân</strong></h4>

<ul class="ml-4">
	<li class="py-2"><strong>Tên: </strong><%= student.name %></li>
	<li class="py-2"><strong>Email: </strong><%= student.email %></li>
	<li class="py-2"><strong>SĐT: </strong><%= student.phone %></li>
	<li class="py-2"><strong>Địa chỉ: </strong><%= student.address %></li>
</ul>

<h4><strong>Danh sách các lớp, khóa học đang học</strong></h4>
<table class="table table-bordered text-center">
	<thead>
		<tr>
			<th style="width: 10px">#</th>
			<th>Tên Lớp</th>
			<th>Khóa học</th>
			<th>Điểm danh</th>
		</tr>
	</thead>
	<tbody>
		<% classList.forEach((classVal, index) => { %>
		<tr>
			<td><%= index + 1 %></td>
			<td><a href="/admin/classes/detail/<%= classVal.id %>"><%= classVal.name %></a></td>
			<td><a href="/admin/courses/detail/<%= classVal.Course.id %>"><%= classVal.Course.name %></a></td>
			<td>
				<a href="/admin/classes/attendance/<%= classVal.id %>"
					class="btn btn-info">
					<i class="fas fa-eye"></i>
				</a>
			</td>
		</tr>
		<% }) %>
	</tbody>
</table>