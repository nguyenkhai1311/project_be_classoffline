<section style="background-color: #eee">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img
                            src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                            alt="avatar"
                            class="rounded-circle img-fluid"
                            style="width: 150px"
                        />
                        <h5 class="my-3">Nguyễn Khai</h5>
                        <p class="text-muted mb-1">Full Stack Developer</p>
                        <p class="text-muted mb-4">
                            Bay Area, San Francisco, CA
                        </p>
                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" class="btn btn-primary">
                                Follow
                            </button>
                            <button
                                type="button"
                                class="btn btn-outline-primary ms-1"
                            >
                                Message
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <p class="mb-4">
                            <strong>Thông tin cá nhân</strong>
                        </p>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">Nguyễn Khải</p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    example@example.com
                                </p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">(097) 234-5678</p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mobile</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">(098) 765-4321</p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    Bay Area, San Francisco, CA
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4">
                                    <strong
                                        >Kết nối mạng xã hội dễ dàng hơn</strong
                                    >
                                </p>
                                <div class="d-flex flex-row">
                                    <div class="col-md-2">
                                        <p>Facebook</p>
                                    </div>
                                    <div class="col-md-7">
                                        <div
                                            class="status-connect"
                                            style="z-index: 2"
                                        >
                                            <a
                                                href="/connect/facebook/redirect"
                                            >
                                                <input type="checkbox"
                                                name="status-connect-facebook"
                                                <% users.forEach( (user) => { %>
                                                <%= user.provider === 'facebook'
                                                ?"checked" : "" %> <% }) %>
                                                data-bootstrap-switch />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex flex-row">
                                    <div class="col-md-2">
                                        <p>Google</p>
                                    </div>
                                    <div class="col-md-7">
                                        <a
                                            href="/connect/google/redirect"
                                            style="z-index: 1000"
                                        >
                                            <input type="checkbox"
                                            name="status-connect-google" <%
                                            users.forEach( (user) => { %> <%=
                                            user.provider === 'google'
                                            ?"checked" : "" %> <% }) %>
                                            data-bootstrap-switch />
                                        </a>
                                    </div>
                                </div>
                                <%#
                                <div class="d-flex flex-row">
                                    <div class="col-md-2">
                                        <p>Github</p>
                                    </div>
                                    <div class="col-md-7">
                                        <a
                                            href="/connect/github/redirect"
                                            style="z-index: 1000"
                                        >
                                            <input
                                                type="checkbox"
                                                name="my-checkbox"
                                                checked
                                                data-bootstrap-switch
                                            />
                                        </a>
                                    </div>
                                </div>
                                %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
